<div class="row justify-content-center">
    <h1 class="text-center mb-4">Click button to send request</h1>
    <div class="row px-0">
        <form class="col moblie-col mb-2" action="/" method="GET">
            <button type="sumbit" class="btn btn-success w-100">GET /</button>
        </form>
        <form class="col moblie-col mb-2" action="/new" method="GET">
            <button type="sumbit" class="btn btn-success w-100">GET /new</button>
        </form>
        <form class="col moblie-col mb-2" action="/520" method="GET">
            <button type="sumbit" class="btn btn-success w-100">GET /:id</button>
        </form>
        <form class="col moblie-col mb-2" action="/delay" method="GET">
            <button type="sumbit" class="btn btn-success w-100">GET /delay</button>
        </form>
        <form class="col moblie-col mb-2" action="/" method="POST">
            <button type="sumbit" class="btn btn-success w-100">POST /</button>
        </form>
    </div>
    <div class="row justify-content-end align-items-end">
        <div class="col-6 col-sm-4">
            <h1 class="text-center my-3">Show logs</h1>
        </div>
        <div class="col-6 col-sm-4 px-0 pb-3" style="text-align: right;">
            <button type="sumbit" class="btn btn-warning ml-auto" style="text-transform:none;">Download log file</button>
        </div>
    </div>
    <div class="card border-primary py-3 mb-3" style="max-height: 450px; overflow:auto;">
        {{#each logs}}
        <div class="row justify-content-center">
            <div class="text-center" style>
                <p class="mx-auto" style="width: 250px;text-align: left;">{{ this.date }} | {{this.method}} from {{this.url}}
                </p>   
            </div>
        </div>
        {{/each}}
    </div>
</div>